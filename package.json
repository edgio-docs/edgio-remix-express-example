    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@heroicons/react": "^1.0.6",
    "@layer0/cli": "^4.18.2",
    "@layer0/core": "^4.18.2",
    "@layer0/devtools": "^4.18.2",
    "@layer0/prefetch": "^4.18.2",
    "@layer0/react": "^4.19.4",
    "@layer0/rum": "^3.1.0",
    "@remix-run/dev": "^1.6.8",
    "@vercel/nft": "^0.21.0",
    "autoprefixer": "^10.4.8",
