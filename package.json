{
  "name": "layer0-remix-express-example",
  "scripts": {
    "dev": "remix build && run-p \"dev:*\"",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "build": "remix build",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "layer0:dev": "layer0 dev",
    "layer0:build": "layer0 build",
    "layer0:deploy": "layer0 deploy",
    "layer0:production": "layer0 run --production",
    "format": "prettier --write '**/*' --ignore-unknown"
  },
  "sideEffects": false,
  "dependencies": {
